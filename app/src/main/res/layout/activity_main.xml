<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <EditText
    android:paddingRight="10dp"
    android:textStyle="bold"
    android:textColor="#000"
    android:textSize="30sp"
    android:gravity="right|center"

    android:id="@+id/editText"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="match_parent"
    android:layout_height="100dp"/>

  <TextView
      android:text="0"
    android:paddingEnd="10dp"
     android:textStyle="bold"
     android:textColor="#000"
     android:textSize="30sp"
     android:gravity="right|center"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText"
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

  <View
     android:id="@+id/view"
     android:background="#9C9898"
     app:layout_constraintTop_toBottomOf="@id/result"
     android:layout_width="match_parent"
     android:layout_height="2dp"/>

  <androidx.constraintlayout.widget.ConstraintLayout
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintTop_toBottomOf="@id/view"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <Button
      android:onClick="pressButton"
      app:layout_constraintRight_toLeftOf="@id/btnBackspace"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:id="@+id/btnClear"
      android:text="Clear"
      android:layout_width="190dp"
      android:layout_height="80dp"/>

  <Button
      android:onClick="pressButton"
      app:layout_constraintLeft_toRightOf="@id/btnClear"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:id="@+id/btnBackspace"
      android:text="Backspace"
      android:layout_width="190dp"
      android:layout_height="80dp"/>

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn7"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="7"
      app:layout_constraintStart_toStartOf="@+id/btnClear"
      app:layout_constraintTop_toBottomOf="@id/btnClear" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn8"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="8"
      app:layout_constraintRight_toRightOf="@+id/btnClear"
      app:layout_constraintTop_toBottomOf="@id/btnClear" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn9"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="9"
      app:layout_constraintStart_toStartOf="@+id/btnBackspace"
      app:layout_constraintTop_toBottomOf="@id/btnBackspace" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btnDel"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="/"
      app:layout_constraintRight_toRightOf="@+id/btnBackspace"
      app:layout_constraintTop_toBottomOf="@id/btnBackspace" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn4"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="4"
      app:layout_constraintStart_toStartOf="@+id/btn7"
      app:layout_constraintTop_toBottomOf="@id/btn7" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn5"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="5"
      app:layout_constraintRight_toRightOf="@+id/btn8"
      app:layout_constraintTop_toBottomOf="@id/btn8" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn6"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="6"
      app:layout_constraintStart_toStartOf="@+id/btn9"
      app:layout_constraintTop_toBottomOf="@id/btn9" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btnMultiply"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="*"
      app:layout_constraintRight_toRightOf="@+id/btnDel"
      app:layout_constraintTop_toBottomOf="@id/btnDel" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn1"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="1"
      app:layout_constraintStart_toStartOf="@+id/btn4"
      app:layout_constraintTop_toBottomOf="@id/btn4" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn2"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="2"
      app:layout_constraintRight_toRightOf="@+id/btn5"
      app:layout_constraintTop_toBottomOf="@id/btn5" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn3"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="3"
      app:layout_constraintStart_toStartOf="@+id/btn6"
      app:layout_constraintTop_toBottomOf="@id/btn6" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btnMinus"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="-"
      app:layout_constraintRight_toRightOf="@+id/btnMultiply"
      app:layout_constraintTop_toBottomOf="@id/btnMultiply" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btnDot"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="."
      app:layout_constraintStart_toStartOf="@+id/btn1"
      app:layout_constraintTop_toBottomOf="@id/btn1" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btn0"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="0"
      app:layout_constraintRight_toRightOf="@+id/btn2"
      app:layout_constraintTop_toBottomOf="@id/btn2" />

  <Button
      android:onClick="pressButton"
      android:id="@+id/btnEqual"
      android:layout_width="90dp"
      android:layout_height="80dp"
      android:text="="
      app:layout_constraintRight_toRightOf="@id/btn3"
      app:layout_constraintStart_toStartOf="@+id/btn3"
      app:layout_constraintTop_toBottomOf="@id/btn3" />

  <Button
      android:onClick="pressButton"
      android:text="+"
      android:id="@+id/btnPlus"
      android:layout_width="90dp"
      android:layout_height="80dp"
      app:layout_constraintLeft_toLeftOf="@id/btnMinus"
      app:layout_constraintRight_toRightOf="@+id/btnMinus"
      app:layout_constraintTop_toBottomOf="@id/btnMinus" />

 </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>